{
	"name": "Save Your Tabs",
	"description": "Guarda todas tus pesta√±as abiertas en el navegador.",
	"version": "1.0",
	"manifest_version": 3,
	"action": {
		"default_popup": "main.html",
		"default_icon": "icon.png"
	},
	"permissions": ["tabs"],
	"host_permissions": ["https://save-your-tabs.vercel.app/*"],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["http://127.0.0.1:5500/*", "https://syt.denil.org/*"],
			"js": ["content.js"]
		}
	]
}
